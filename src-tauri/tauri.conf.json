{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "瓦力-本地AI知识库",
  "version": "0.1.0",
  "identifier": "cn.iwali.wali-ai-app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "瓦力-本地AI知识库",
        "width": 1000,
        "height": 600,
        "decorations": true,
        "transparent": false,
        "windowEffects": null,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "withGlobalTauri": false
  },
  "plugins": {
    "http": {
      "scope": [
        "https://dashscope.aliyuncs.com/*"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
